{
  "cSpell.words": ["valaxy", "valaxyjs"],
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": "locales",
  "i18n-ally.sortKeys": true,
  "prettier.enable": true,
  "editor.formatOnSave": false,
  "files.associations": {
    "*.sqlbook": "sql",
    "*.ndjson": "jsonl",
    "*.dbclient-js": "javascript",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.m": "matlab",
    "*.css": "postcss",
    "reg51.h": "c",
    "REG51.H": "cpp"
  },
  "svg.preview.background": "editor",
  "sarif-viewer.connectToGithubCodeScanning": "off",

  "[markdown]": {
    // 自动换行，写笔记不用自己回车
    "editor.wordWrap": "on",
    // 中文删除优化（逐字删除，不会一键删整行）
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    // 关闭不必要的智能提示，保持干净
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    // Tab 转 2 个空格（Markdown 社区常见缩进风格）
    "editor.tabSize": 4,
    // 关闭尖括号 < > 的自动补全：把 always 改成 languageDefined （Markdown 语言配置本身不定义 <> 为成对括号）
    // 如果仍然出现 <> 自动补全，可能是某个扩展(如自动补全标签)造成，可临时禁用该扩展或将此值改成 "never"。
    // "never" 会同时关闭 () [] {} 的补全；如需彻底关闭改成: "editor.autoClosingBrackets": "never"
    "editor.autoClosingBrackets": "languageDefined",
    "editor.autoClosingQuotes": "always",
    // 关键：保留行尾两个空格 (Markdown 强制换行)，不要裁剪
    "files.trimTrailingWhitespace": false,
    // 防止其它格式化器覆盖
    "editor.formatOnSave": false
  },

// Markdown 插件常用优化（全局设置，不止 Markdown）
"markdown-preview-enhanced.breakOnSingleNewline": true, // 单回车换行
"markdown-preview-enhanced.enableTypographer": true,    // 智能标点
"markdown-preview-enhanced.previewTheme": "github-light.css", // 预览主题
"markdown.preview.breaks": true, // VSCode 自带预览换行
"files.trimTrailingWhitespace": false,
"prettier.trimTrailingWhitespace": false,
// 允许 Markdown 中的行尾空格（由 markdownlint 配置禁用 MD009 实现）
}
